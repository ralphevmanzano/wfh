<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:propertyName="scaleX" android:duration="@integer/anim_duration_short" android:valueTo="0.97"/>
            <objectAnimator android:propertyName="scaleY" android:duration="@integer/anim_duration_short" android:valueTo="0.97"/>
            <objectAnimator android:propertyName="cardElevation" android:duration="@integer/anim_duration_short" android:valueTo="0dp"/>
        </set>
    </item>
    <item
        android:state_pressed="false">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="1"/>
            <objectAnimator android:propertyName="cardElevation" android:valueTo="12dp"/>
        </set>
    </item>
</selector>