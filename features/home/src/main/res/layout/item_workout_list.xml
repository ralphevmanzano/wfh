<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_item_margin_horizontal"
    android:layout_marginVertical="@dimen/card_item_margin_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:stateListAnimator="@animator/list_animator"
    app:cardCornerRadius="@dimen/card_item_corner_radius"
    app:cardElevation="@dimen/card_item_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary">

        <ImageView
            android:id="@+id/ivWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_item_iv_margin_horizontal"
            android:layout_marginTop="@dimen/card_item_iv_margin_top"
            android:adjustViewBounds="true"
            android:contentDescription="@string/workout_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_crunches" />

        <TextView
            android:id="@+id/tvWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_item_title_margin_start"
            android:layout_marginTop="@dimen/card_item_title_margin_top"
            android:fontFamily="@font/archivonarrow"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/card_item_title_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CRUNCHES" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>